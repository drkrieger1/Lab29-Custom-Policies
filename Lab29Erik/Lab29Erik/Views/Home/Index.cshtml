@using System.Security.Claims;

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
</head>
<body>
    <div>
        @if (!User.Identities.Any(u => u.IsAuthenticated))
        {
            <span>Hello Stranger!</span>

        }
        else
        {
            <span>
                Hello @User.Identities.First(u => u.IsAuthenticated &&
                  u.HasClaim(c => c.Type == ClaimTypes.Name)).FindFirst(ClaimTypes.Name).Value
            </span>

        }
    </div>


    <h1>Welcome To My Store Y'all!</h1>

    <ul>
        <li><a asp-controller="Products" asp-action="Index">Go to Products</a></li>
        <li><a asp-controller="Accounts" asp-action="Register">Register</a></li>
        <li><a asp-controller="Accounts" asp-action="LogIn">LogIn</a></li>
        <li><a asp-controller="Accounts" asp-action="AdminLogIn">Admin LogIn</a></li>
        <li><a asp-controller="Accounts" asp-action="AdminRegister">Admin Register</a></li>
        <li><a asp-controller="Home" asp-action="LikesDogs">Epic Dog Page</a></li>
    </ul>
</body>
</html>